@model IEnumerable<SchoolWeb.Models.Results>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student_Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mark)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExamType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.Class_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExamType.ExamType_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section.Section_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.Subject_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Result_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Result_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Result_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
