        @Html.RadioButton("searchBy", "Id") <text>Id</text>
        @Html.RadioButton("searchBy", "Class") <text>Class</text><br />
        @Html.TextBox("search")<br /><br /> <input type="submit" class="MyBtn" value="search" /><br />
