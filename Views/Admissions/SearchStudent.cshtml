@model IEnumerable<SchoolWeb.Models.Admission>

@{
    ViewData["Title"] = "Student List";
}
<div class="container">
    <center>
        <h1 class="header-line">Student List</h1>
    </center>
    <h2 class="crt">Search</h2>
