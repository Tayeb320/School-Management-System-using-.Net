@model IEnumerable<SchoolWeb.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <center>
        <h1 class="header-line">Teachers</h1>
    </center>
    <a asp-action="TeacherCreate">
        <input type="submit" value="Add a new Exam Type" class="MyBtn1" />
    </a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Teacher_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Designation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Teacher_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Designation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    <a asp-action="TeacherEdit" asp-route-id="@item.Teacher_Id">
                        <input class="MyBtn" type="submit" value="Edit">
                    </a>
                    <a asp-action="TeacherDetails" asp-route-id="@item.Teacher_Id"><input class="detailsBtn" type="submit" value="Details"></a>
                    <a asp-action="TeacherDelete" asp-route-id="@item.Teacher_Id"><input class="deleteBtn" type="submit" value="Delete"></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>