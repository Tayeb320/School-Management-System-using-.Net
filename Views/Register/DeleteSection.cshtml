@model SchoolWeb.Models.Sections

@{
    ViewData["Title"] = "Delete";
}
<div class="container">

    <<hr />
    <h3 class="header-line dltcol">Are you sure you want to delete this Section?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Section Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Section_Name)
            </dd>
        </dl>
        <form asp-action="DeleteSection">
            <input type="hidden" asp-for="Section_Id" />
            <input type="submit" value="Delete" class="deleteBtn" />
        </form>
        <a asp-action="Index">
            <input type="submit" value="Back to List" class="MyBtn" />
        </a>
    </div>
</div>