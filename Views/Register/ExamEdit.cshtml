@model SchoolWeb.Models.ExamTypes

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <hr />
    <h2 class="header-line crt"> Edit the Exam type</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ExamEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ExamType_Id" />
                <div class="form-group">
                    <label class="control-label">Exam Type</label>
                    <input asp-for="ExamType_Name" class="form-control" />
                    <span asp-validation-for="ExamType_Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="MyBtn1" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="ExamIndex"> <input class="MyBtn" type="submit" value="Back to List"></a>

    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>