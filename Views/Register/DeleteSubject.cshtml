@model SchoolWeb.Models.Subjects

@{
    ViewData["Title"] = "Delete";
}
<div class="container">

    <<hr />
    <h3 class="header-line dltcol">Are you sure you want to delete this Subject?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Subject Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Subject_Name)
            </dd>
        </dl>

        <form asp-action="DeleteSubject">
            <input type="hidden" asp-for="Subject_Id" />
            <input type="submit" value="Delete" class="deleteBtn" />
        </form>
        <a asp-action="SubjectIndex">
            <input type="submit" value="Back to List" class="MyBtn" />
        </a>
    </div>
</div>